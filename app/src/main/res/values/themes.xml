<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MonsterRadar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Kolory podstawowe dla AppCompat -->
        <item name="colorPrimary">@color/radar_green</item>
        <item name="colorPrimaryDark">#00C832</item>
        <item name="colorAccent">@color/neon_red</item>

        <!-- Nadpisanie tła i pasków systemowych (wymagają przedrostka android:) -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Styl dla przycisków -->
        <item name="buttonStyle">@style/Widget.MonsterRadar.Button</item>
    </style>

    <style name="Widget.MonsterRadar.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
</resources>
