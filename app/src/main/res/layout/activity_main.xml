<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAP -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:mapId="d32c0899d0296a8e135ee77e"/>

    <!-- FULL SCREEN WARNING TINT -->
    <ImageView
        android:id="@+id/warningImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/warning"
        android:scaleType="fitXY"
        android:alpha="0.4"
        android:visibility="gone"/>

    <!-- STYLIZED TIMER -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@drawable/timer_bg"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="00:00"
        android:fontFamily="monospace"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/radar_green"/>

    <!-- GAME OVER OVERLAY -->
    <LinearLayout
        android:id="@+id/gameOverLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_overlay"
        android:visibility="gone">

        <TextView
            android:id="@+id/gameOverText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_over"
            android:textSize="54sp"
            android:textColor="@color/neon_red"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_over_subtext"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="48dp"
            android:alpha="0.7"/>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/reboot_radar"
            android:background="@drawable/button_bg"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/shareButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="@string/broadcast_status"
            android:background="@drawable/button_bg"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

</FrameLayout>
